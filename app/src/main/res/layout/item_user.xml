<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/user_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin_card_view"
        android:layout_marginTop="@dimen/default_margin_card_view"
        android:layout_marginEnd="@dimen/default_margin_card_view"
        android:layout_marginBottom="@dimen/default_margin_card_view"
        app:cardBackgroundColor="@color/steel_blue"
        app:cardCornerRadius="@dimen/corner_radius_card_view"
        app:cardElevation="@dimen/elevation_card_view"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/padding_card_view"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/login_user_card_view_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_text_view"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_login_text_view"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Login" />

            <TextView
                android:id="@+id/id_user_card_view_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_text_view"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_id_text_view"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/login_user_card_view_text_view"
                tools:text="id" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/avatar_user_card_view_image_view"
                android:layout_width="@dimen/size_avatar_image_view"
                android:layout_height="@dimen/size_avatar_image_view"
                android:layout_marginEnd="@dimen/margin_end_image_view"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_no_avatar" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>