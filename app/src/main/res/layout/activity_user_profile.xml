<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/steel_blue"
    tools:context=".view.details.UserProfileActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/avatar_user_profile_image_view"
        android:layout_width="@dimen/size_avatar_profile_image_view"
        android:layout_height="@dimen/size_avatar_profile_image_view"
        android:layout_marginTop="@dimen/size_margin_top"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_no_avatar" />

    <TextView
        android:id="@+id/login_user_profile_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_margin_top"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_login_profile_text_view"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/avatar_user_profile_image_view"
        tools:text="Login" />

    <TextView
        android:id="@+id/id_user_profile_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_margin_top_id"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_id_profile_text_view"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_user_profile_text_view"
        tools:text="id" />

</androidx.constraintlayout.widget.ConstraintLayout>